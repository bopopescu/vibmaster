<h1>All Articles</h1>

<% @articles.each do |article| %>
 <p>Category: <%= article.category %></p>
 <h2><%= article.title %></h2>
 <h3><%= article.subtitle %></h3>
 <p><%= article.body %></p>
 <%= link_to "Read", article_path(article) %>
<br>
 <%= link_to "Delete Article", article_path(article), method: :delete %>
<%end%>