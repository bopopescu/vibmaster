<%= form_for @article do |f| %>
	<%= f.label :category, "Choose a category" %>
	<%= f.text_field :category %>

	<%= f.label :title, "Add a title" %>
	<%= f.text_field :title %>

	<%= f.label :subtitle, "Add a subtitle" %>
	<%= f.text_field :subtitle %>

	<%= f.label :body, "Add body text" %>
	<%= f.text_area :body %>

	<%= f.label :author, "Add author" %>
	<%= f.text_field :author %>

	<%= f.label :position, "Add position" %>
	<%= f.number_field :position %>

	<%= f.label :promoted, "Promoted to front page?" %>
	<%= f.check_box :promoted %>

	<%= f.submit%>
<% end %>