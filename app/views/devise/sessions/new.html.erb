<div id="devise-hero-section">
    <div class="devise-hero devise-hero-image" style="background-image: url(<%= image_path 'engine.jpg'%>)">
    </div>
    <div class="devise-hero devise-hero-gradient">
    </div>
    <div class="devise-hero devise-hero-overlay" style="background-image: url(<%= image_path 'overlay-pattern.png'%>)">
    </div>
</div>

<!-- GREEN DIVIDER SERCTION -->
<section class="bgr-green section-green"> 
  <div class="container color-light centered">
    <h3>Hello, please sign in</h3>
  </div>
  
</section>
<div class="container">
  <div class="row devise-content">
    <div class="col-10 offset-1 col-sm-6 offset-sm-3">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
              required: false,
              autofocus: true,
              input_html: { autocomplete: "email" } %>
            <%= f.input :password,
              required: false,
              input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>